<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="1.7976931348623157E308" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="jtorrent.torrent.presentation.view.TorrentsTableView">
    <ToolBar>
        <Button fx:id="addButton" mnemonicParsing="false">
            <tooltip>
                <Tooltip text="Add Torrent" textAlignment="CENTER"/>
            </tooltip>
            <graphic>
                <FontIcon iconLiteral="mdi2p-plus"/>
            </graphic>
        </Button>
        <Button fx:id="addUrlButton" mnemonicParsing="false">
            <graphic>
                <FontIcon iconLiteral="mdi2l-link-variant"/>
            </graphic>
        </Button>
        <Button fx:id="createFileButton" mnemonicParsing="false">
            <graphic>
                <FontIcon iconLiteral="mdi2f-file-plus"/>
            </graphic>
        </Button>
        <Button fx:id="deleteButton" mnemonicParsing="false">
            <graphic>
                <FontIcon iconLiteral="mdi2d-delete"/>
            </graphic>
        </Button>
        <Button fx:id="startButton" mnemonicParsing="false">
            <graphic>
                <FontIcon iconLiteral="mdi2a-arrow-collapse-down"/>
            </graphic>
        </Button>
        <Button fx:id="stopButton" mnemonicParsing="false">
            <graphic>
                <FontIcon iconLiteral="mdi2s-stop"/>
            </graphic>
        </Button>
    </ToolBar>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="name" minWidth="0.0" prefWidth="200.0" text="Name"/>
            <TableColumn fx:id="size" minWidth="0.0" prefWidth="50.0" text="Size"/>
            <TableColumn fx:id="status" minWidth="0.0" prefWidth="58.0" text="Status"/>
            <TableColumn fx:id="downSpeed" minWidth="0.0" prefWidth="121.0" text="Down Speed"/>
            <TableColumn fx:id="upSpeed" minWidth="0.0" prefWidth="121.0" text="Up Speed"/>
            <TableColumn fx:id="eta" minWidth="0.0" prefWidth="121.0" text="ETA"/>
            <TableColumn fx:id="saveDirectory" minWidth="0.0" prefWidth="121.0" text="Save Directory"/>
        </columns>
    </TableView>
</VBox>
